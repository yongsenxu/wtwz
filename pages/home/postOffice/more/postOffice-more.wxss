/* pages/home/postOffice/more/postOffice-more.wxss */
.container {
	width: 100vw;
	flex: 1;
	overflow: hidden;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	background: #F1F6FD;
	justify-content: center;
}

.vertical-scroll {
	width: 750rpx;
	height: 100%;
	flex-shrink: 0;
	display: flex;
	flex-direction: column;
	overflow: hidden;
}
.content{
	display: flex;
	flex-direction: column;
	width: 100%;
	gap: 16rpx;
	align-items: flex-start;
	justify-content: center;
	flex-direction: column;
	padding: 20rpx;
	padding-top: 16rpx;
	box-sizing: border-box;
}
.content_title text{
	color: #B0B0B0;
	font-family: "PingFang SC M";
	font-size: 24rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}
.articleVideoCard{
	display: flex;
	flex-direction: column;
	gap: 10rpx;
	width: 100%;
}