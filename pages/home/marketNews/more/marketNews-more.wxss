/* pages/home/marketNews/more/marketNews-more.wxss */
.container {
	width: 100vw;
	flex: 1;
	overflow: hidden;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	background: linear-gradient(180deg, #D1E9FA 0%, #FFF 10.93%);
	justify-content: center;
}

.vertical-scroll {
	width: 750rpx;
	height: 100%;
	flex-shrink: 0;
	display: flex;
	flex-direction: column;
	overflow: hidden;
}

.marketNews_container {
	display: flex;
	flex-direction: column;
	padding: 20rpx;
	box-sizing: border-box;
	padding-top: 40rpx;
}

.marketNews_title {
	display: flex;
	align-items: center;
	gap: 12rpx;
}

.marketNews_title image {
	width: 34rpx;
	height: 34rpx;
}

.marketNews_title text {
	color: #252525;
	font-family: "PingFang SC M";
	font-size: 36rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}
.marketNews_list{
	display: flex;
	width: 100%;
	height: auto;
	flex-direction: column;
}

.item{
	position: relative;
	padding: 24rpx 0;
	box-sizing: border-box;
	border-top: 1rpx solid #E8E8E8;
}
.first-item {
	border: none;
}
.first-item .list_rank text{
	color: #F85959;
}
.second-item .list_rank text{
	color: #F89259;
}
.third-item .list_rank text{
	color: #F8D559;
}
.list_rank{
	height: auto;
	position: absolute;
}
.list_rank text{
	color: #737373;
font-family: Inter;
font-size: 32rpx;
font-style: italic;
font-weight: 600;
line-height: normal;
}

.list_content{
	width: 100%;
	height: auto;
	padding-left: 40rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}
.content_title{
	display: flex;
}
.content_title text{
	color: #252525;
font-family: "PingFang SC R";
font-size: 34rpx;
font-style: normal;
font-weight: 400;
line-height: normal;
}