/* pages/home/marketNews/details/marketNews-details.wxss */
.container {
	width: 100vw;
	flex: 1;
	overflow: hidden;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	justify-content: center;
}

.vertical-scroll {
	width: 750rpx;
	height: 100%;
	flex-shrink: 0;
	display: flex;
	flex-direction: column;
	overflow: hidden;
}

.details_container {
	display: flex;
	flex-direction: column;
	padding: 20rpx;
	box-sizing: border-box;
	width: 100%;
	height: auto;
	gap: 40rpx;
}

.details_header {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
	width: 100%;
	height: auto;
}

.news_title text {
	color: #252525;
	font-family: "PingFang SC M";
	font-size: 42rpx;
	font-style: normal;
	font-weight: 500;
	line-height: 160%;
	/* 67.2px */
	letter-spacing: 3.36rpx;
}

.news_author_time {
	display: flex;
	gap: 45rpx;
}

.news_author_time text {
	color: #737373;
	font-family: "PingFang SC R";
	font-size: 24rpx;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}

.news_introduction {}

.news_introduction text:nth-child(1) {
	color: #737373;
	font-family: "PingFang SC M";
	font-size: 28rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
	margin-right: 10rpx;
}

.news_introduction text:nth-child(2) {
	margin-right: 10rpx;
	color: #737373;
	font-family: "PingFang SC R";
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	line-height: 44rpx;
	/* 157.143% */
}

.news_introduction text:nth-child(3) {
	color: #737373;
	font-family: "PingFang SC R";
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	line-height: 44rpx;
	/* 157.143% */
}

.details_footer image {
	width: 10rpx;
	height: 34rpx;
	flex-shrink: 0;
	background-color: #2F98FF;
}

.details_footer text {
	color: #333;
	font-family: "PingFang SC R";
	font-size: 34rpx;
	font-style: normal;
	font-weight: 400;
	line-height: 64rpx;
	letter-spacing: 2.72rpx;
}