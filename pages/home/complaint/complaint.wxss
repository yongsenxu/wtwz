.container {
	width: 100vw;
	flex: 1;
	overflow: hidden;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	background: #F3F8FF;
	justify-content: center;
}

.vertical-scroll {
	width: 750rpx;
	height: 100%;
	flex-shrink: 0;
	display: flex;
	flex-direction: column;
	overflow: hidden;
}
.complaint_container{
	display: flex;
	flex-direction: column;
	width: 100%;
	height: auto;
	padding:16rpx 20rpx;
	box-sizing: border-box;
	gap: 10rpx;
	align-items: center;
}
