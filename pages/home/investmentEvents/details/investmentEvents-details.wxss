/* pages/home/investmentEvents/details/investmentEvents-details.wxss */
.container {
	background: linear-gradient(180deg, #15A9FF 0%, #FFF 42.83%);
}

.details_container {
	display: flex;
	flex-direction: column;
	padding: 20rpx;
	padding-top: 50rpx;
	width: 100%;
	height: auto;
	box-sizing: border-box;
	gap: 28rpx;
}

.container_header {
	display: flex;
	flex-direction: column;
}

.horizontal-scroll {
	width: 100%;
	overflow: hidden;
	white-space: nowrap;
}

.phase_list {
	display: flex;
	width: 100%;
	gap: 14rpx;
}

.phase_list button {
	width: 182rpx;
	height: 64rpx;
	flex-shrink: 0;
	background-color: rgba(255, 255, 255, 0.3);
	color: #FFF;
	text-align: center;
	font-family: "PingFang SC M";
	font-size: 28rpx;
	font-style: normal;
	font-weight: 500;
	line-height: 64rpx;
}

.container_footer {
	display: flex;
	flex-direction: column;
	gap: 40rpx;
}

.product_container {
	display: flex;
	flex-direction: column;
	gap: 28rpx;
}

.product_title text {
	color: #252525;
	font-family: "PingFang SC M";
	font-size: 36rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.product_card {
	width: 100%;
	height: auto;
	flex-shrink: 0;
	border-radius: 12px;
	border: 1px solid #E8E8E8;
	padding: 28rpx 20rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	gap: 30rpx;
}

.product_card-header {
	display: flex;
	gap: 28rpx;
}

.product_headImg {
	width: 100rpx;
	height: 100rpx;
	flex-shrink: 0;
}

.product_headImg image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
	background-color: #D9D9D9;
	overflow: hidden;
}

.product_author {
	display: flex;
	flex-direction: column;
	justify-content: space-between;

}

.product_author text:nth-child(1) {
	color: #333;
	font-family: "PingFang SC M";
	font-size: 36rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.product_author text:nth-child(2) {
	color: #737373;
	font-family: "PingFang SC R";
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}

.product_card-footer {
	width: 100%;
	height: auto;
	flex-shrink: 0;
	border-radius: 12rpx;
	background: rgba(232, 245, 255, 0.70);
	padding:28rpx 20rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	gap: 28rpx;
}
.product_content,.product_riskTip{
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.product_content-title,.riskTip_title{
	width: 100%;
	flex-shrink: 0;
}
.product_content-title,.riskTip_title text{
	color: #2F98FF;
font-family: "PingFang SC M";
font-size: 28rpx;
font-style: normal;
font-weight: 500;
line-height: normal;
}
.product_content-article,.riskTip_content{
	display: flex;
	width: 100%;
	flex-shrink: 0;
}
.product_content-article,.riskTip_content text{
	color: #737373;
font-family: "PingFang SC R";
font-size: 28rpx;
font-style: normal;
font-weight: 400;
line-height: 44rpx; /* 157.143% */
}