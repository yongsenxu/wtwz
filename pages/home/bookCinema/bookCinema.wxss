/* pages/home/bookCinema/bookCinema.wxss */

.bookCinema_container {
	display: flex;
	flex-direction: column;
	align-items: center;
	height: 1900rpx;
	width: 100%;
	box-sizing: border-box;
}

.bookCinema_switch {
	display: flex;
	width: 330rpx;
	height: 62rpx;
	flex-shrink: 0;
	border-radius: 36rpx;
	background: #FFF;
	align-items: center;
	justify-content: space-around;
	position: fixed;
	margin-top: 16rpx;
	z-index: 999;
}

.book_switch {
	flex: 1;
	display: flex;
	justify-content: center;
	box-sizing: border-box;
	border-right: 1rpx solid #E8E8E8;
}

.cinema_switch {
	flex: 1;
	display: flex;
	justify-content: center;
}

.book_switch,
.cinema_switch text {
	color: #333;
	font-family: "PingFang SC R";
	font-size: 34rpx;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}

.selected text {
	color: #2F98FF;
	font-family: "PingFang SC M";
	font-size: 34rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.book_banner {
	display: flex;
	width: 100vw;
	height: 344rpx;
}

.book_banner image {
	width: 100%;
	height: 100%;
	flex-shrink: 0;
}
.t-tabs{
	background-color: transparent !important;
	display: flex;
	justify-content: center; 

}
.t-tabs__wrapper{
	background-color: transparent !important;
}
.t-tabs__item{
	color: #252525 !important;
	font-family: "PingFang SC R";
font-size: 30rpx;
font-style: normal;
font-weight: 400;
line-height: normal;
}
.t-tabs__item--active{
	color: #2F98FF !important;
	font-size: 30rpx !important;
	font-weight: 500 !important;
}
.book_home{
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	gap: 20rpx;
	padding: 20rpx;
	width: 100%;
	height: auto;
}
.bookCard_list{
	width: 100%;
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.bookCard_item{
	width: 100%;
}
.book_sort{
	width: 100%;
}

