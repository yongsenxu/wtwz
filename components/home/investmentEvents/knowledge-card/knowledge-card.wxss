/* components/home/investmentEvents/knowledge-card/knowledge-card.wxss */
.knowledgeCard {
	width: 100%;
	height: auto;
	flex-shrink: 0;
	border-radius: 8rpx;
	background: rgba(232, 245, 255, 0.70);
	backdrop-filter: blur(2.6500000953674316rpx);
	display: flex;
	padding: 24rpx 20rpx;
	box-sizing: border-box;
	align-items: center;
	justify-content: space-between;
	gap: 20rpx;
}
.knowledgeCard_container{
	display: flex;
	gap:20rpx;
	align-items: center;

}
.knowledgeCard_title {
	display: flex;
	flex-shrink: 0;
	box-sizing: content-box;
	padding-right: 20rpx;
	border-right: 1rpx solid #FFF;
	align-items: center;
	width: 48rpx;
	height: 58rpx;
}

.knowledgeCard_title image{
	width: 100%;
	height: 100%;
}

.knowledgeCard_title text {
	color: #3A41FF;
	font-family: TencentSans;
	font-size: 24rpx;
	font-style: normal;
	font-weight: 700;
	line-height: 120%;
	/* 28.8px */
}

.knowledgeCard_content {
	display: flex;
	flex-shrink: 0;
	flex-direction: column;
	text-align: left;
	width: 100%;
	flex: 1;
}
.knowledgeCard_content image{
	width: 24rpx;
	height: 20rpx;
	flex-shrink: 0;
}
.knowledgeCard_content text:nth-child(1) {
	color: #333;
	font-family: "PingFang SC M";
	font-size: 22rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.knowledgeCard_content text:nth-child(2) {
	color: #737373;
	font-family: "PingFang SC R";
	font-size: 20rpx;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}

.knowledgeCard_operate button {
	width: 120rpx;
	height: 48rpx;
	flex-shrink: 0;
	border-radius: 8rpx;
	background: #2F98FF;
	color: #FFF;
	font-family: "PingFang SC M";
	font-size: 28rpx;
	font-style: normal;
	font-weight: 500;
	line-height: 48rpx;
	letter-spacing: 1.12rpx;
}