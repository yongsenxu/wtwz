/* components/home/bookCinema/cinema-card/cinema-card.wxss */

.movieCard{
	display: flex;
	width: 100%;
	height: auto;
	flex-direction: column;
	gap: 12rpx;
}
.movie_headImg{
	display: flex;
	width: 100%;
}
.movie_headImg image{
	width: 100%;
height: 300rpx;
border-radius: 8rpx;
background: #D9D9D9;
}
.movie_content{
	display: flex;
	flex-direction: column;
	gap: 8rpx;	
}
.movie_title{
	display: flex;

}
.movie_title text{
	color: #333;
font-family: "PingFang SC R";
font-size: 26rpx;
font-style: normal;
font-weight: 400;
line-height: normal;
}
.movie_introduction{
	display: flex;
}
.movie_introduction text{
	color: var(--, #737373);
font-family: "PingFang SC R";
font-size: 22rpx;
font-style: normal;
font-weight: 400;
line-height: normal;
}