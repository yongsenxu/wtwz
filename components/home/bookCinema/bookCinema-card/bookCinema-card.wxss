/* components/home/bookCinema/bookCinema-card/bookCinema-card.wxss */
.bookCard_item {
	width: 100%;
	display: flex;
	flex-direction: column;
	gap: 10rpx;
}

.bookCard_item text {
	color: #737373;
	font-family: "PingFang SC R";
	font-size: 24rpx;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}

.bcCard {
	width: 100%;
	display: flex;
	background: #fff;
	box-sizing: border-box;
	padding: 20rpx;
	border-radius: 10rpx;
	flex-direction: column;
	gap: 26rpx;
}

.hotTopic {
	width: 100%;
	border-radius: 10rpx;
	background: #F1F6FD;
	box-sizing: border-box;
	padding: 15rpx 20rpx;

}

.hotTopic text {
	color: #2F98FF;
	font-family: "PingFang SC M";
	font-size: 24rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.bcCard_container {
	display: flex;
	flex-direction: column;
	gap: 12rpx;

}

.bcCard_content {
	display: flex;
	flex-direction: row;
	gap: 20rpx;

}

.bcCard_img {
	width: 190rpx;
	height: 250rpx;
	flex-shrink: 0;
	border-radius: 12rpx;
	overflow: hidden;
}

.bcCard_img image {
	width: 100%;
	height: 100%;
}

.bcCard_information {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	flex: 1;
}

.bcCard_title {
	display: flex;
	margin-left: -18rpx;
}

.bcCard_title text {
	color: #252525;
	font-family: "PingFang SC M";
	font-size: 30rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.bcCard_author_time {
	display: flex;
}

.bcCard_author_time text {
	color: #333;
	font-family: "PingFang SC M";
	font-size: 20rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.bcCard_tag_list {
	display: flex;
	gap: 16rpx;
}

.bcCard_tag_item {
	border-radius: 14rpx;
	background: #79B6FF;
	padding: 0 10rpx;
	display: flex;
}

.bcCard_tag_item text {
	color: #FFF;
	font-family: "PingFang SC R";
	font-size: 20rpx;
	font-style: normal;
	font-weight: 500;
	line-height: normal;
}

.bcCard_introduction {
	width: 100%;
	height: 127rpx;
	border-radius: 10rpx;
	background: #F1F6FD;
	box-sizing: border-box;
	padding: 12rpx 8rpx;
	display: flex;
}

.bcCard_introduction text {
	color: #737373;
	font-family: "PingFang SC R";
	font-size: 24rpx;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}

.bcCard_operate {
	display: flex;
	justify-content: space-between;
}

.operate_item {
	display: flex;
	align-items: center;
	gap: 5rpx;
}

.operate_item image {
	width: 34rpx;
	height: 34rpx;
	flex-shrink: 0;

}

.operate_item text {
	color: #626262;
	font-family: "PingFang SC R";
	font-size: 20rpx;
	font-style: normal;
	font-weight: 400;
	line-height: normal;
}